{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"strict": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"outDir": "./dist",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"moduleResolution": "node",
		"forceConsistentCasingInFileNames": true,
		"baseUrl": "./src",
		"paths": {
			"@app/*": ["app/*"],
			"@processes/*": ["processes/*"],
			"@features/*": ["features/*"],
			"@entities/*": ["entities/*"],
			"@shared/*": ["shared/*"]
		}
	},
	"include": ["src/**/*.ts"]
}
